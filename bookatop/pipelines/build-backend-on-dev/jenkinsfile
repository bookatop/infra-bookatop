pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
    }

    stages {
        stage('Build on DEV') {
            steps {
                script {
                    echo "Hello Jenkins pipeline"
                    sh "ls"
                    sh "pwd"
                    def buildFile = libraryResource 'com/bookatop/scripts/build-backend-on-dev.sh'
                    sh buildFile $WORKSPACE $BRANCH_NAME $BUILD_NUMBER
                }
            }
        }
    }
}