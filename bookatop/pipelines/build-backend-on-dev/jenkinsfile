pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
    }

    stages {
        stage('Build on DEV') {
            steps {
                script {
                    def file = 'build-backend-on-dev.sh'
                    def script = libraryResource "com/bookatop/scripts/$file"
                    writeFile(file: file, text: script)
                    sh "chmod +x ./$file"
                    sh "./$file $WORKSPACE $BRANCH_NAME $BUILD_NUMBER"
                }
            }
        }
    }
}