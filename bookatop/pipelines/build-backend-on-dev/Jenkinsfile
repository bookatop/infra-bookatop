pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
    }

    stages {
        stage('Build on DEV') {
            steps {
                script {
                    sh 'export ENVIRONMENT=DEV'
                    sh 'export PROJECT_NAME=build-backend-on-dev'
                    sh 'export JENKINS_HOME=/var/lib/jenkins'

                    String file = 'build-backend-on-dev.sh'
                    String script = libraryResource "com/bookatop/scripts/${file}"

                    writeFile(file: file, text: script)
                    sh "chmod +x ./${file}"
                    sh "./${file} ${BRANCH_NAME} ${BUILD_NUMBER}"
                }
            }
        }
    }
}