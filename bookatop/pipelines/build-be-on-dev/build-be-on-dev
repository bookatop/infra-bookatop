/* Introduces steps to build and test the be-bookatop on dev environment */

import com.bookatop.utils.FileUtils

pipeline {
    agent any

    stages {
        stage('Build on DEV') {
            steps {
                sh 'gradle clean build test'
            }
        }
        stage('Copy on DEV') {
            steps {
                script {
                    echo "Current dir"
                    sh "pwd"

                    /* List of services */
                    services = [
                        'auth'
                    ]
                    logger = { echo it }
                    errorLog = { error it }

                    FileUtils utils = new FileUtils(logger, errorLog)

                    services.each { item ->
                        echo "build:${BRANCH_NAME}:$item:${BUILD_NUMBER} on $ENVIRONMENT"

                        source = "${SOUR_PATH}/${item}/build/libs/${item}-service.jar"
                        dest = "${DEST_PATH}/${BRANCH_NAME}/${item}-service-${BUILD_NUMBER}.jar"

                        utils.copyFile(source, dest)
                        utils.fileExists(dest)
                    }
                }
            }
        }
    }
}