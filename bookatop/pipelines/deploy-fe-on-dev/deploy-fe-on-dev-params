/* Introduces steps to build and test the fe-bookatop on dev environment */

import com.bookatop.provider.FrontEndProvider

def static branches() {
    /*
    def getTags = ("git ls-remote -t -h git@github.com:bookatop/be-bookatop.git").execute()
    return getTags.text.readLines().collect {
        it.split()[1].replaceAll('refs/heads/', '').replaceAll('refs/tags/', '').replaceAll("\\^\\{\\}", '')
    }
    */
    return ['main']
}

pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '10', daysToKeepStr: '', numToKeepStr: '10')
    }

    parameters {
        choice(
                name: 'branchNameParam',
                choices: branches(),
                description: 'Choose branch name*'
        )
        validatingString(
                name: 'buildNumberParam',
                defaultValue: '1',
                description: 'Put the build number*',
                failedValidationMessage: 'Build number is invalid',
                regex: /^[0-9]+$/
        )
    }

    stages {
        stage('Deploy on DEV') {
            steps {
                script {
                    echo "deploy:${branchNameParam}:fe-bookatop:${buildNumberParam} on ${ENVIRONMENT}"

                    source = "${SOUR_PATH}/${branchNameParam}/build-${buildNumberParam}"
                    dest = "${DEST_PATH}"

                    logger = { echo it }
                    error = { error it }

                    new FrontEndProvider(
                            source,
                            dest
                    ).deploy(logger, error)
                }
            }
        }
    }
}