/* Introduces steps to build and test the fe-bookatop on dev environment */

import static com.bookatop.utils.ShellExecUtils.checkError
import static com.bookatop.utils.ShellExecUtils.executeShellCommand
import com.bookatop.utils.FileUtils

pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '10', daysToKeepStr: '', numToKeepStr: '10')
    }

    stages {
        stage('Copy on DEV') {
            steps {
                script {
                    echo "release:${BRANCH_NAME}:all:${BUILD_NUMBER} on $ENVIRONMENT"

                    logger = { echo it }
                    errorLog = { error it }

                    source = "${WORKSPACE}/${SOUR_PATH}"
                    dest = "${DEST_PATH}/${BRANCH_NAME}/build-${BUILD_NUMBER}"

                    FileUtils utils = new FileUtils(logger, errorLog)

                    utils.makeDir(dest)
                    utils.copyDir(source, dest)
                }
            }
        }
        stage('Build on DEV') {
            steps {
                script {
                    command = """
                       npm install && npm run clean && npm run build:dev && npm run lint
                    """

                    logger = { echo it }
                    errorLog = { error it }

                    checkError(
                       executeShellCommand(command, logger),
                       errorLog
                    )
                }
            }
        }
    }
}