/* Pipeline introduces steps to build on dev */

import com.bookatop.provider.FrontEndProvider

pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
    }

    stages {
        stage('Build on DEV') {
            steps {
                script {
                    echo "build:${BRANCH_NAME}:all:${BUILD_NUMBER}:$ENVIRONMENT"

                    logger = { echo it }
                    errorLog = { error it }

                    source = "${WORKSPACE}/."
                    dest = "${JENKINS_HOME}/jobs/${PROJECT_NAME}/branches/${BRANCH_NAME}/builds/${BUILD_NUMBER}/release"

                    FrontEndProvider provider = new FrontEndProvider(source, dest)

                    provider.build(logger, error)
                    provider.install(logger, error)
                }
            }
        }
    }
}