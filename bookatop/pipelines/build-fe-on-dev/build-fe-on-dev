/* Pipeline introduces steps to build on dev */

import static com.bookatop.utils.ShellExecUtils.checkError
import static com.bookatop.utils.ShellExecUtils.executeShellCommand
import com.bookatop.utils.FileUtils

pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
    }

    stages {
        stage('Build on DEV') {
            steps {
                script {
                    echo "build:${BRANCH_NAME}:all:${BUILD_NUMBER}:$ENVIRONMENT"

                    logger = { echo it }
                    errorLog = { error it }

                    command = """
                       npm install && npm run clean && npm run build:dev && npm run lint
                    """

                    checkError(
                            executeShellCommand(command, logger),
                            errorLog
                    )

                    source = "${WORKSPACE}/."
                    dest = "${JENKINS_HOME}/jobs/${PROJECT_NAME}/branches/${BRANCH_NAME}/builds/${BUILD_NUMBER}/release"

                    FileUtils utils = new FileUtils(logger, errorLog)

                    echo "source=" + {source}
                    echo "dest=" + {dest}

//                    utils.makeDir(dest)
//                    utils.copyDir(source, dest)

                }
            }
        }
    }
}