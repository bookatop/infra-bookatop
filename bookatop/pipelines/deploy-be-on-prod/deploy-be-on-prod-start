node {
    //checkout devops repository (other repository)
    sh 'mkdir -p devops'

    dir('devops') {
        script {
            git branch: 'main', url: 'git@github.com:bookatop/infra-bookatop.git'
        }
    }

    // pass the environment variables to new pipeline
    withEnv(['ENVIRONMENT=PROD',
             'BACKEND_URL="http://93.84.112.114:8082"',
             'SOUR_PATH="/path/dev-env/be-bookatop/deploy"',
             'DEST_PATH="/path/prod-env/be-bookatop/deploy"']) {
        // load Jenkinsfile Pipeline file from devops dir
        load 'devops/bookatop/pipelines/deploy-be-on-dev/deploy-be-on-dev-params'
    }
}