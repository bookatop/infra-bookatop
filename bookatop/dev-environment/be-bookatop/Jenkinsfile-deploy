/* Introduces steps to build and test the be-bookatop on dev environment */

pipeline {
    agent any

    stages {
        stage('Deploy on Dev') {
            steps {
                script {
                    properties([
                        parameters([
                            choice(
                                choices: ['build 1', 'build 2', 'build 2'],
                                name: 'BUILD_NUMBER'
                            )
                        ])
                    ])
                }
                echo 'Deploy the main branch on dev environment'
            }
        }
    }
}