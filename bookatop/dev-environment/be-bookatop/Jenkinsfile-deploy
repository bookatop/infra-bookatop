/* Introduces steps to build and test the be-bookatop on dev environment */

pipeline {
    agent any

    stages {
        stage('Deploy on Dev') {
            steps {
                script {
                    properties([
                        string(
                            name: 'BUILD_NUMBER',
                            defaultValue: '0',
                            description: 'Put the build number'
                        )
                    ])
                }
                echo 'Deploy the main branch on dev environment'
            }
        }
    }
}