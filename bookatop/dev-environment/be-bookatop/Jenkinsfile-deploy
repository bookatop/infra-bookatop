/* Introduces steps to build and test the be-bookatop on dev environment */

pipeline {
    agent any

    parameters  {
        string(
            name: 'BUILD_NUMBER',
            defaultValue: '0',
            description: 'Put the build number'
        )
    }

    stages {
        stage('Deploy on Dev') {
            steps {
                echo "Deploy build ${params.BUILD_NUMBER} number of the main branch on dev environment"
            }
        }
    }
}