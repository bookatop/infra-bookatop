/* Introduces steps to build and test the be-bookatop on dev environment */

def branches() {
    def getTags = ("git ls-remote -t -h git@github.com:bookatop/be-bookatop.git").execute()
    return getTags.text.readLines().collect {
        it.split()[1].replaceAll('refs/heads/', '').replaceAll('refs/tags/', '').replaceAll("\\^\\{\\}", '')
    }
}

pipeline {
    agent any

    parameters  {
        choice(
            name: 'branchName',
            choices: branches(),
            description: 'Choose branch name',
            required: true
        )
        string(
            name: 'serviceName',
            defaultValue: '0',
            description: 'Put the service name',
            required: true
        )
        string(
            name: 'buildName',
            defaultValue: '0',
            description: 'Put the build number',
            required: true
        )
    }

    stages {
        stage('Deploy on Dev') {
            when {
                expression {
                    params.branchName != null && params.serviceName != null && params.buildName != null
                }
            }
            steps {
                echo "Deploy ${params.BRANCH_NUMBER}:${params.SERVICE_NAME}:${params.BUILD_NUMBER} on dev environment"
            }
        }
    }
}