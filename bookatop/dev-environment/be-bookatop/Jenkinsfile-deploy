/* Introduces steps to build and test the be-bookatop on dev environment */

pipeline {
    agent any

    stages {
        stage('Clean/Build/Test') {
            steps {
                sh 'ls'
                sh 'gradle clean build test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy the main branch on dev environment'
            }
        }
    }
}