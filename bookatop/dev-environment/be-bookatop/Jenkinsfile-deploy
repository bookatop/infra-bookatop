/* Introduces steps to build and test the be-bookatop on dev environment */

def static branches() {
    def getTags = ("git ls-remote -t -h git@github.com:bookatop/be-bookatop.git").execute()
    return getTags.text.readLines().collect {
        it.split()[1].replaceAll('refs/heads/', '').replaceAll('refs/tags/', '').replaceAll("\\^\\{\\}", '')
    }
}

pipeline {
    agent any

    environment {
        SOUR_PATH = '/path/dev-env/be-bookatop/releases/${params.branchName}'
        DEST_PATH = '/path/dev-env/be-bookatop/releases/libs'
    }

    parameters  {
        choice(
            name: 'branchName',
            choices: branches(),
            description: 'Choose branch name*'
        )
        validatingString(
            name: 'serviceName',
            defaultValue: 'auth',
            description: 'Put the service name*',
            failedValidationMessage: 'Service name is empty',
            regex: /^.+$/
        )
        validatingString(
            name: 'buildName',
            defaultValue: '1',
            description: 'Put the build number*',
            failedValidationMessage: 'Build number is invalid',
            regex: /^[0-9]+$/
        )
    }

    stages {
        stage('Deploy on Dev') {
            steps {
                echo "Deploy ${params.branchName}:${params.serviceName}:${params.buildName} on dev environment"

                script {
                    echo "${params.branchName}-${params.branchName}.jar"

                    varSourceFile = "${SOUR_PATH}/${params.serviceName}-${params.buildName}.jar"
                    varDestFile = "${DEST_PATH}/${params.serviceName}-${params.branchName}-${params.buildName}.jar"

                    echo varSourceFile
                    echo varDestFile
                }
            }
        }
    }
}