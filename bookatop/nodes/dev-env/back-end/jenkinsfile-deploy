def static branches() {
    /*
    def getTags = ("git ls-remote -t -h git@github.com:bookatop/be-bookatop.git").execute()
    return getTags.text.readLines().collect {
        it.split()[1].replaceAll('refs/heads/', '').replaceAll('refs/tags/', '').replaceAll("\\^\\{\\}", '')
    }
    */
    return ['main']
}

node {
    //checkout devops repository (other repository)
    sh 'mkdir -p devops'

    dir('devops') {
       script {
          git branch: 'main', url: 'git@github.com:bookatop/infra-bookatop.git'
       }
    }

    // pass the environment variables to new pipeline
    withEnv(['ENVIRONMENT=DEV',
             'BRANCH_PARAM="${branchName}"',
             'SERVICE_PARAM="${serviceName}"',
             'BUILD_NUM_PARAM="${buildNumber}"',
             'SOUR_PATH="/path/dev-env/fe-bookatop/releases/${branchName}"',
             'DEST_PATH="/path/dev-env/fe-bookatop/deploy"']) {
       // load Jenkinsfile Pipeline file from devops dir
       load 'devops/bookatop/pipelines/back-end/jenkinsfile-deploy'
    }
}